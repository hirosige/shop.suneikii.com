

<div class="container">
  <div class="sign-up-title__base">
    <div class="sign-up-title__caption">
      <%= t('front.sessions.sign_up.title') %>
    </div>
  </div>

  <div class="sign-up-main__base">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <fieldset class="form-group sign-up-main__item--width">
          <label for="email"><%= t('front.sessions.sign_up.items.field.name') %></label>
          <%= f.text_field :name, :class => 'form-control' ,:placeholder => t('front.sessions.sign_up.items.placeholder.name'), autofocus: true %>
        </fieldset>

        <fieldset class="form-group">
          <label for="email"><%= t('front.sessions.sign_up.items.field.email') %></label>
          <%= f.email_field :email, :class => 'form-control' ,:placeholder => t('front.sessions.sign_up.items.placeholder.email'), autofocus: true %>
        </fieldset>

        <fieldset class="form-group">
          <label for="password"><%= t('front.sessions.sign_up.items.field.password') %></label>
          <% if @minimum_password_length %>
              <em><%= t('front.sessions.sign_up.message', :max => @minimum_password_length) %></em>
          <% end %><br />
          <%= f.password_field :password, :class => 'form-control' ,:placeholder => t('front.sessions.sign_up.items.placeholder.password'), autofocus: true, autocomplete: "off" %>
        </fieldset>

        <fieldset class="form-group">
          <label for="password_confirmation"><%= t('front.sessions.sign_up.items.field.password_confirmation') %></label>
          <% if @minimum_password_length %>
              <em><%= t('front.sessions.sign_up.message', :max => @minimum_password_length) %></em>
          <% end %><br />
          <%= f.password_field :password_confirmation, :class => 'form-control' ,:placeholder => t('front.sessions.sign_up.items.placeholder.password_confirmation'), autofocus: true, autocomplete: "off" %>
        </fieldset>

        <div class="actions">
          <%= f.submit t('front.sessions.sign_up.button'), :class => 'sign-up-main__btn' %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>





