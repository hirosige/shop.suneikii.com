<% provide(:title, t('admin.sizes.title')) %>

<div class="right_col" role="main">
  <div class="">

    <%= render :partial => 'admin/shared/page_title', :locals => {title: t('admin.sizes.title'), description: t('admin.sizes.description')} %>

    <div class="clearfix"></div>
    <div class="row">
      <div class="clearfix"></div>
      <div class="col-md-12 col-sm-12 col-xs-12">
        <%= render 'layouts/admin_menus/goods_sub_tab' %>

        <div class="x_panel">
          <%= render :partial => 'admin/shared/table_title', :locals => {title: t('admin.sizes.title'), description: t('admin.sizes.description')} %>
          <div class="x_content">

            <%= render 'pagination' %>
            <%= render :partial => 'table_contents', :locals => {sizes: @sizes} %>
            <%= render 'pagination' %>

            <br>
            <%= set_button_new(t('admin.sizes.buttons.add'), new_admin_products_size_path) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>