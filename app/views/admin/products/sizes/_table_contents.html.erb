<div class="table-responsive">
  <table class="table table-striped jambo_table bulk_action">
    <thead>
    <tr class="headings">
      <th>
        <input type="checkbox" id="check-all" class="flat">
      </th>
      <th class="column-title"><%= t('admin.sizes.items.name') %></th>
      <th class="column-title no-link last" colspan="3"><span class="nobr"><%= t('admin.sizes.items.controls') %></span></th>
      <th class="bulk-actions" colspan="4">
        <a class="antoo" style="color:#fff; font-weight:500;"><%= t('admin.elements.buttons.bulc_action') %> ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
      </th>
    </tr>
    </thead>

    <tbody>
    <% sizes.each do |size| %>
        <tr class="even pointer">
          <td class="a-center">
            <input type="checkbox" class="flat" name="table_records">
          </td>
          <td><%= size.name %></td>
          <td><%= set_button_show('', [:admin, :products, size]) %></td>
          <td><%= set_button_edit('', edit_admin_products_size_path(size)) %></td>
          <td><%= set_button_delete('', [:admin, :products, size]) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>