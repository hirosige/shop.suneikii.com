<% @users.title(t('admin.users.title')) %>

<h4 class="ui horizontal divider header" style="margin: 20px 0;">
  <i class="tag icon"></i>
  Users
</h4>

<%= render :partial => 'search_form', :locals => {q: @q} %>

<%= render 'pagination' %>

<h3 class="ui top attached header">
  <%= t('admin.users.title') %>

</h3>
<div class="ui attached segment">
  <table class="ui very basic collapsing celled table">
    <thead>
    <th><%= sort_link(@q, :name, t('admin.users.items.name')) %></th>
    <th><%= sort_link(@q, :email, t('admin.users.items.email')) %></th>
    <th><%= sort_link(@q, :login_ct, t('admin.users.items.login_ct')) %></th>
    <th><%= sort_link(@q, :current_ip, t('admin.users.items.current_ip')) %></th>
    </thead>
    <tbody>
      <%= render :partial => 'table_contents', :locals => { users: @users } %>
    </tbody>
  </table>
</div>
<h3 class="ui bottom attached header">
  Footer
</h3>

<%= render 'pagination' %>