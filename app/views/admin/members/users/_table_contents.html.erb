<% users.each do |user| %>
    <tr>
      <td>
        <h4 class="ui image header">
          <div class="content">
            <div class="sub header">
              <a class="ui blue image large label">
                <img src="https://kotobank.jp/image/dictionary/nipponica/media/81306024014516.jpg">

                <div class="detail"><%= user.role.capitalize %></div>
              </a>

            </div>
          </div>
        </h4></td>
      <td>
        <%= user.email %>
        <% if user.your_id_sign %>
          <span class="ui teal tag label" style="margin: 0 20px;"><%= user.your_id_sign %></span>
        <% end %>
      </td>
      <td><%= user.sign_in_count %></td>
      <td><%= user.current_sign_in_ip %></td>
    </tr>
<% end %>
