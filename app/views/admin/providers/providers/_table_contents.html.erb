<div class="table-responsive">
  <table class="table table-striped jambo_table bulk_action">
    <thead>
    <tr class="headings">
      <th>
        <input type="checkbox" id="check-all" class="flat">
      </th>

      <th class="column-title"><%= t('admin.providers.items.name') %></th>
      <th class="column-title"><%= t('admin.providers.items.photo') %></th>
      <th class="column-title"><%= t('admin.providers.items.introduction') %></th>
      <th class="column-title"><%= t('admin.providers.items.site_url') %></th>
      <th class="column-title"><%= t('admin.providers.items.address') %></th>
      <th class="column-title"><%= t('admin.providers.items.tel') %></th>
      <th class="column-title"><%= t('admin.providers.items.fax') %></th>
      <th class="column-title"><%= t('admin.providers.items.certificate') %></th>
      <th class="column-title"><%= t('admin.providers.items.working_time') %></th>
      <th class="column-title"><%= t('admin.providers.items.holidays') %></th>
      <th class="column-title"><%= t('admin.providers.items.created_at') %></th>
      <th class="column-title"><%= t('admin.providers.items.updated_at') %></th>
      <th class="column-title no-link last" colspan="3"><span class="nobr"><%= t('admin.providers.items.controls') %></span></th>
      <th class="bulk-actions" colspan="12">
        <a class="antoo" style="color:#fff; font-weight:500;"><%= t('admin.elements.buttons.bulc_action') %> ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
      </th>
    </tr>
    </thead>

    <tbody>
    <% @providers.each do |provider| %>
        <tr class="even pointer">
          <td class="a-center">
            <input type="checkbox" class="flat" name="table_records">
          </td>
          <td> <%= provider.name %></td>
          <td> <%= image_tag provider.photo_url(:thumb), :style => 'border: 1px #ddd solid; border-radius: 10px;' %></td>
          <td> <%= provider.introduction %></td>
          <td> <%= provider.site_url %></td>
          <td> <%= provider.address %></td>
          <td> <%= provider.tel %></td>
          <td> <%= provider.fax %></td>
          <td> <%= provider.certificate %></td>
          <td> <%= provider.working_time %></td>
          <td> <%= provider.holidays %></td>
          <td> <%= provider.formatted_created_date %></td>
          <td> <%= provider.formatted_updated_date %></td>
          <td> <%= set_button_show('', [:admin, :providers, provider]) %></td>
          <td> <%= set_button_edit('', edit_admin_providers_provider_path(provider)) %></td>
          <% if can? :destroy, Provider %>
            <td> <%= set_button_delete('', [:admin, :providers, provider]) %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>