<div class="right_col" role="main" xmlns="http://www.w3.org/1999/html">
  <div class="">

    <%= render :partial => 'admin/shared/page_title', :locals => {title: t('admin.providers.title'), description: t('admin.providers.description')} %>
    <div class="clearfix"></div>



    <div class="row">
      <% if @provider.errors.any? %>
          <div id="error_explanation" style="border: 1px #ff855f solid; padding: 20px; margin: 20px; width: 800px; border-radius: 10px; background: rgba(255,127,128,0.5)">
            <h2 style="text-decoration: underline; color: #ff0000;"><%= "#{pluralize(@provider.errors.count, "")} つエラーがあります、ご確認下さい:" %></h2>
            <ul>
              <% @provider.errors.full_messages.each do |message| %>
                  <li style="color: #ff0000;"><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="col-md-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2><%= t('admin.providers.modify_page_title') %></h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">

            <br />
            <%= form_for [:admin, :providers, @provider], :html => {:class => 'form-horizontal form-label-left'}  do |f| %>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.providers.items.name') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :name, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.providers.items.photo') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.file_field :photo, :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.providers.items.introduction') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_area :introduction, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.providers.items.site_url') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :site_url, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.providers.items.address') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_area :address, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.providers.items.tel') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :tel, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.providers.items.fax') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :fax, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.providers.items.certificate') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :certificate, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.providers.items.working_time') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :working_time, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.providers.items.holidays') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :holidays, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button type="submit" class="btn btn-primary">
                      <%= t('admin.providers.buttons.exec') %>
                    </button>
                  </div>
                </div>

            <% end %>


          </div>
        </div>
      </div>
    </div>
  </div>
</div>