<div class="table-responsive">
  <table class="table table-striped jambo_table bulk_action">
    <thead>
    <tr class="headings">
      <th>
        <input type="checkbox" id="check-all" class="flat">
      </th>
      <th class="column-title"><%= t('admin.shoppers_distributors.items.shop_name') %></th>
      <th></th>
      <th class="column-title"><%= t('admin.shoppers_distributors.items.distributor_name') %></th>
      <th class="column-title no-link last" colspan="3"><span class="nobr"><%= t('admin.shoppers_distributors.items.controls') %></span>
      </th>
      <th class="bulk-actions" colspan="13">
        <a class="antoo" style="color:#fff; font-weight:500;"><%= t('admin.elements.buttons.bulc_action') %> ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
      </th>
    </tr>
    </thead>

    <tbody>
    <% shoppers_distributors.each do |shoppers_distributor| %>
        <tr class="even pointer">
          <td class="a-center">
            <input type="checkbox" class="flat" name="table_records">
          </td>
          <% unless @before_name == shoppers_distributor.shopper.shop_name %>
            <% @before_name = shoppers_distributor.shopper.shop_name %>
            <td rowspan="<%= shoppers_distributor.shoppers_count %>">
              <h3><span class="label label-default"><%= shoppers_distributor.shopper.shop_name %></span></h3>
            </td>
          <% end %>
          <td><%= set_glyph_icon(:arrow_right) %></td>
          <td>
            <h4><span class="label label-success"><%= shoppers_distributor.distributor.name %></span></h4>
          </td>
          <td><%= set_button_show('', [:admin, :tenants, shoppers_distributor]) %></td>
          <td><%= set_button_edit('', edit_admin_tenants_shoppers_distributor_path(shoppers_distributor)) %></td>
          <td><%= set_button_delete('', [:admin, :tenants, shoppers_distributor]) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>