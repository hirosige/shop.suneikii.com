<div class="table-responsive">
  <table class="table table-striped jambo_table bulk_action">
    <thead>
    <tr class="headings">
      <th>
        <input type="checkbox" id="check-all" class="flat">
      </th>
      <th class="column-title"><%= t('admin.restaurants.items.name') %></th>
      <th class="column-title"><%= t('admin.restaurants.items.created_at') %></th>
      <th class="column-title"><%= t('admin.restaurants.items.updated_at') %></th>
      <th class="column-title no-link last" colspan="4"><span class="nobr"><%= t('admin.restaurants.items.controls') %></span></th>
      <th class="bulk-actions" colspan="12">
        <a class="antoo" style="color:#fff; font-weight:500;"><%= t('admin.elements.buttons.bulc_action') %> ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
      </th>
    </tr>
    </thead>

    <tbody>
    <% @restaurants.each do |restaurant| %>
        <tr class="even pointer">
          <td class="a-center">
            <input type="checkbox" class="flat" name="table_records">
          </td>
          <td> <%= restaurant.name %></td>
          <td> <%= restaurant.formatted_created_date %></td>
          <td> <%= restaurant.formatted_updated_date %></td>
          <td> <%= set_button_show('', [:admin, :foods, restaurant]) %></td>
          <td> <%= set_button_edit('', edit_admin_foods_restaurant_path(restaurant)) %></td>
          <td> <%= set_button_delete('', [:admin, :foods, restaurant]) %></td>
          <td> <%= set_button_show('', [:admin, :foods, restaurant, :menus]) %> </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>