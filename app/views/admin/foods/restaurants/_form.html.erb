<div class="right_col" role="main" xmlns="http://www.w3.org/1999/html">
  <div class="">

    <%= render :partial => 'admin/shared/page_title', :locals => {title: t('admin.restaurants.title'), description: t('admin.restaurants.description')} %>
    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2><%= t('admin.restaurants.modify_page_title') %></h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">

            <br />
            <%= form_for [:admin, :foods, @restaurant], :html => {:class => 'form-horizontal form-label-left'}  do |f| %>
                <% if @restaurant.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= "#{pluralize(@restaurant.errors.count, "error")} prohibited this order from being saved:" %></h2>
                      <ul>
                        <% @restaurant.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                <% end %>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.restaurants.items.name') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :name, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.restaurants.items.phone_number') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :phone_number, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-6 col-xs-12"><%= t('admin.restaurants.items.description') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_area :description, :required => 'required', :class => 'form-control col-md-7 col-xs-12', :style => 'height: 200px;'%>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.restaurants.items.notification') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_area :notification, :required => 'required', :class => 'form-control col-md-7 col-xs-12', :style => 'height: 150px;'%>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.restaurants.items.floor') %></label>
                  <div class="col-md-1 col-sm-6 col-xs-12">
                    <%= f.number_field :floor, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div><div style="display: table-cell; vertical-align: middle;">階</div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.restaurants.items.chairs') %></label>
                  <div class="col-md-1 col-sm-6 col-xs-12">
                    <%= f.number_field :chairs, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div><div style="display: table-cell; vertical-align: middle;">席</div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.restaurants.items.private_room') %></label>
                  <div class="col-md-1 col-sm-6 col-xs-12">
                    <%= f.number_field :private_room, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div><div style="display: table-cell; vertical-align: middle;">部屋</div>
                </div>

                <div class="form-group">
                  <div id="ingredients" class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">営業時間</label>
                    <div class="col-md-6 col-sm-6 col-xs-12" style="left: -10px; margin-bottom: 10px">
                      <%= f.fields_for :time_tables do |builder| %>
                          <%= render 'time_table_fields', f: builder %>
                      <% end %>
                      <div id="links">
                        <br>
                        <%= link_to_add_association "Add Time Table", f, :time_tables, :class => 'btn btn-xs btn-primary' %><br/>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button type="submit" class="btn btn-primary">
                      <%= t('admin.restaurants.buttons.exec') %>
                    </button>
                  </div>
                </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>