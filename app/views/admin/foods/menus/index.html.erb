<% provide(:title, t('admin.menus.title')) %>

<div class="right_col" role="main">
  <div class="">

    <%= render :partial => 'admin/shared/page_title', :locals => {title: t('admin.menus.title'), description: t('admin.menus.description')} %>

    <div class="clearfix"></div>
    <div class="row">
      <div class="clearfix"></div>
      <div class="col-md-12 col-sm-12 col-xs-12">
        <%= render 'layouts/admin_menus/foods_sub_tab' %>

        <div class="x_panel">
          <%= render :partial => 'admin/shared/table_title', :locals => {title: "#{@restaurant.name}ã®#{t('admin.menus.title')}", description: t('admin.menus.description')} %>
          <div class="x_content">

            <%= render 'pagination' %>
            <%= render :partial => 'table_contents', :locals => {menus: @menus} %>
            <%= render 'pagination' %>

            <br>
            <%= set_button_new(t('admin.menus.buttons.add'), new_admin_foods_restaurant_menu_path) %>
            <%= set_button_csv(t('admin.menus.buttons.csv_export'), admin_foods_restaurant_menus_path(format: 'csv')) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>