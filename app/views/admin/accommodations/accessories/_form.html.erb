<div class="right_col" role="main" xmlns="http://www.w3.org/1999/html">
  <div class="">

    <%= render :partial => 'admin/shared/page_title', :locals => {title: t('admin.accessories.title'), description: t('admin.accessories.description')} %>
    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2><%= t('admin.room_classes.modify_page_title') %></h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">

            <br />
            <%= form_for [:admin, :accommodations, @accessory], :html => {:class => 'form-horizontal form-label-left'}  do |f| %>
                <% if @accessory.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= "#{pluralize(@accessory.errors.count, "error")} prohibited this order from being saved:" %></h2>
                      <ul>
                        <% @accessory.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                <% end %>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.accessories.items.name') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :name, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button type="submit" class="btn btn-primary">
                      <%= t('admin.accessories.buttons.exec') %>
                    </button>
                  </div>
                </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>