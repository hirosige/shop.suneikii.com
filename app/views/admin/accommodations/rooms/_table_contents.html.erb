<div class="table-responsive">
  <table class="table table-striped jambo_table bulk_action">
    <thead>
    <tr class="headings">
      <th>
        <input type="checkbox" id="check-all" class="flat">
      </th>
      <th class="column-title"><%= t('admin.rooms.items.name') %></th>
      <th class="column-title"><%= t('admin.rooms.items.room_number') %></th>
      <th class="column-title"><%= t('admin.rooms.items.class_name') %></th>
      <th class="column-title"><%= t('admin.rooms.items.area') %></th>
      <th class="column-title"><%= t('admin.rooms.items.qty') %></th>
      <th class="column-title"><%= t('admin.rooms.items.how_many_ppl') %></th>
      <th class="column-title"><%= t('admin.rooms.items.created_at') %></th>
      <th class="column-title"><%= t('admin.rooms.items.updated_at') %></th>
      <th class="column-title no-link last" colspan="3"><span class="nobr"><%= t('admin.rooms.items.controls') %></span></th>
      <th class="bulk-actions" colspan="12">
        <a class="antoo" style="color:#fff; font-weight:500;"><%= t('admin.elements.buttons.bulc_action') %> ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
      </th>
    </tr>
    </thead>

    <tbody>
    <% @rooms.each do |room| %>
        <tr class="even pointer">
          <td class="a-center">
            <input type="checkbox" class="flat" name="table_records">
          </td>
          <td> <%= room.name %></td>
          <td> <%= room.room_number %></td>
          <td> <%= room.room_name %></td>
          <td> <%= room.area %></td>
          <td> <%= room.qty %></td>
          <td> <%= room.how_many_ppl %></td>
          <td> <%= room.formatted_created_date %></td>
          <td> <%= room.formatted_updated_date %></td>
          <td> <%= set_button_show('', [:admin, :accommodations, room]) %></td>
          <td> <%= set_button_edit('', edit_admin_accommodations_room_path(room)) %></td>
          <td> <%= set_button_delete('', [:admin, :accommodations, room]) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>