<div class="right_col" role="main" xmlns="http://www.w3.org/1999/html">
  <div class="">

    <%= render :partial => 'admin/shared/page_title', :locals => {title: t('admin.rooms.title'), description: t('admin.rooms.description')} %>
    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2><%= t('admin.room_classes.modify_page_title') %></h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">

            <br />
            <%= form_for [:admin, :accommodations, @room], :html => {:class => 'form-horizontal form-label-left'}  do |f| %>
                <% if @room.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= "#{pluralize(@room.errors.count, "error")} prohibited this order from being saved:" %></h2>
                      <ul>
                        <% @room.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                <% end %>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.rooms.items.name') %></label>
                  <div class="col-md-3 col-sm-6 col-xs-12">
                    <%= f.text_field :name, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="name" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.rooms.items.room_number') %></label>
                  <div class="col-md-3 col-sm-6 col-xs-12">
                    <%= f.text_field :room_number, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <fieldset class="form-group">
                  <label for="room_class_id" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.rooms.items.class_name') %></label>
                  <div class="col-md-3 col-sm-6 col-xs-6">
                    <%= f.collection_select :room_class_id, RoomClass.all, :id, :name, {prompt: "Select any"}, {class: "form-control col-md-7 col-xs-12"} %>
                  </div>
                </fieldset>

                <div class="form-group">
                  <label for="description" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.rooms.items.description') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_area :description, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="sales_description" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.rooms.items.sales_description') %></label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_area :sales_description, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="area" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.rooms.items.area') %></label>
                  <div class="col-md-3 col-sm-6 col-xs-12">
                    <%= f.text_field :area, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="qty" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.rooms.items.qty') %></label>
                  <div class="col-md-1 col-sm-6 col-xs-12">
                    <%= f.text_field :qty, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="checkin_time" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.rooms.items.checkin_time') %></label>
                  <div class="col-md-2 col-sm-6 col-xs-12">
                    <%= f.text_field :checkin_time, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="checkout_time" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.rooms.items.checkout_time') %></label>
                  <div class="col-md-2 col-sm-6 col-xs-12">
                    <%= f.text_field :checkout_time, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="how_many_ppl" class="control-label col-md-3 col-sm-3 col-xs-12"><%= t('admin.rooms.items.how_many_ppl') %></label>
                  <div class="col-md-1 col-sm-6 col-xs-12">
                    <%= f.number_field :how_many_ppl, :required => 'required', :class => 'form-control col-md-7 col-xs-12' %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button type="submit" class="btn btn-primary">
                      <%= t('admin.rooms.buttons.exec') %>
                    </button>
                  </div>
                </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>