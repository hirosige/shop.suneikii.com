<div class="nested-fields">
  <div class="field">
    <div class="col-sm-6 form-inline">
      <div class="form-group">
        <%= f.label :good_id, :class => 'sr-only' %>
        <%= f.collection_select :good_id, Good.all, :id, :name,
                                {prompt: "Select any"},
                                {class: "form-control"}
        %>
        <%= f.label :qty, :class => 'sr-only' %>
        <%= f.number_field :qty, :class => 'form-control', :placeholder=> "Qty" %>
        <%= f.label :sub_total, :class => 'sr-only' %>
        <%= f.text_field :sub_total, :class => 'form-control', :placeholder=> "Sub Total" %>
      </div>
      <%= link_to_remove_association '', f, :class => 'btn btn-round btn-danger glyphicon glyphicon-remove form-control' %>
    </div>
  </div>
</div>
