
  <div class="right_col" role="main">
    <div class="">
      <div class="page-title">
        <div class="title_left">
          <h3>Order Details <small>Some examples to get you started</small></h3>
        </div>

        <div class="title_right">
          <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="clearfix"></div>

      <div class="row">
        <div class="col-md-12">
          <div class="x_panel">
            <div class="x_title">
              <h2>Invoice Design <small>Showing detailed information</small></h2>
              <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Settings 1</a>
                    </li>
                    <li><a href="#">Settings 2</a>
                    </li>
                  </ul>
                </li>
                <li><a class="close-link"><i class="fa fa-close"></i></a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">

              <section class="content invoice">
                <div class="row">
                  <div class="col-xs-12 invoice-header">
                    <h1>
                      <i class="fa fa-vcard-o"></i> Detailed Order
                      <small class="pull-right">Date: <%= @order.order_date %></small>
                      </h1>
                  </div>
                </div>
                <div class="row invoice-info">
                  <div class="col-sm-4 invoice-col">
                    User : <%= @order.user_id %>
                    <address>
                      <strong>Iron Admin, Inc.</strong>
                      <br>795 Freedom Ave, Suite 600
                      <br>New York, CA 94107
                      <br>Phone: 1 (804) 123-9876
                      <br>Email: ironadmin.com
                      </address>
                  </div>
                  <div class="col-sm-4 invoice-col">
                    To
                    <address>
                      <strong>John Doe</strong>
                      <br>795 Freedom Ave, Suite 600
                      <br>New York, CA 94107
                      <br>Phone: 1 (804) 123-9876
                      <br>Email: jon@ironadmin.com
                      </address>
                  </div>
                  <div class="col-sm-4 invoice-col">
                    <b>Invoice #007612</b>
                    <br>
                    <br>
                    <b>Order ID:</b> <%= @order.id %>
                    <br>
                    <b>Payment Status:</b> <label class="label label-primary">
                      <%= @order.payment_status %>
                    </label>
                    <br>
                    <b>Fulfillment Status:</b> <label class="label label-success">
                      <%= @order.fulfillment_status %>
                    </label>
                    <br>
                    <b>Account:</b> 968-34567
                  </div>
                </div>

                <div class="row">
                  <div class="col-xs-12 table">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Serial #</th>
                          <th>Product Name</th>
                          <th style="width: 59%">Description</th>
                          <th>Price</th>
                          <th>Qty</th>
                          <th>Subtotal</th>
                        </tr>
                      </thead>
                      <tbody>
                      <% @order.order_details.each do |order_detail| %>
                        <tr>
                          <td><%= order_detail.id %></td>
                          <td><%= order_detail.name %></td>
                          <td></td>
                          <td>1,000</td>
                          <td>1</td>
                          <td>$64.50</td>
                        </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>

                <div class="row">
                  <div class="col-xs-6">
                    <p class="lead">Representative Notes:</p>
                    <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                      <%= @order.note %>
                    </p>
                  </div>

                  <div class="col-xs-6">
                    <p class="lead">Amount Due 2/22/2014</p>
                    <div class="table-responsive">
                      <table class="table">
                        <tbody>
                          <tr>
                            <th style="width:50%">Subtotal:</th>
                            <td>$250.30</td>
                          </tr>
                          <tr>
                            <th>Tax (9.3%)</th>
                            <td>$<%= @order.tax %></td>
                          </tr>
                          <tr>
                            <th>Shipping:</th>
                            <td>$<%= @order.shipping_cost %></td>
                          </tr>
                          <tr>
                            <th>Total:</th>
                            <td>$<%= @order.total_amount %></td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>

                <div class="row no-print">
                  <div class="col-xs-12">
                    <button class="btn btn-default" onclick="window.print();"><i class="fa fa-print"></i> Print</button>
                    <button class="btn btn-primary pull-right" style="margin-right: 5px;"><i class="fa fa-download"></i> Generate PDF</button>
                  </div>
                </div>
              </section>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>