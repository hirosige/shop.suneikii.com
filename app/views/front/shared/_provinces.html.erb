<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="main-title__base">
        <div class="main-title--left">
          <div class="main-title__caption">
            <%= t('front.apartments.province_breadcrumb') %>
          </div>
        </div>
        <div class="main--title-clearfix"></div>
      </div>

      <div class="province-map__base">
        <% unless @provinces.nil? %>
            <% @provinces.each do |province| %>
                <button class="province-map__item" onclick="location.href='<%= send("#{@params_service.singular_category}_district_list_path", province.url_safe) %>'">
                  <%= province.name_ja %>
                  <span class="district-map__count"><%= "#{province.send(@params_service.category).size}" %></span>
                </button>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>