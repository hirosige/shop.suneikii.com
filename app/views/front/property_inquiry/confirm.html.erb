<div class="container marketing">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-8">
      <div class="page-header">
        <h3>お問い合わせ確認フォーム</h3>
      </div>
      <%= form_for @site_inquiry, :url => site_inquiry_thanks_path do |f| %>
        <table class="table">
          <tr>
            <th class="col-xs-4">名前</th>
            <td>
              <%= f.hidden_field :name %>
              <%= @site_inquiry.name %>
            <td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.hidden_field :email %>
              <%= @site_inquiry.email %>
            </td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td>
              <%= f.hidden_field :body %>
              <%= simple_format(@site_inquiry.body) %>
            </td>
          </tr>
        </table>
        <br>
        <%= f.submit '送信', :class => 'btn btn-primary', data: { disable_with: '送信中...'} %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<br>
