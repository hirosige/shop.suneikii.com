<% unless @apartment.apartment_thumbnails.blank? %>
    <div class="contents-gap"></div>

    <div class="phto-slide">
      <style>
        .swiper-container {
          width: 100%;
          height: 500px;
          padding-top: 100px;
          padding-bottom: 100px;
        }
        .swiper-slide {
          background-position: center;
          background-size: cover;
          width: 300px;
          height: 300px;
          box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.7);
        }
      </style>

      <div class="swiper-container">
        <div class="swiper-wrapper">
          <% @apartment.apartment_thumbnails.each do |thumbnail| %>
              <div class="swiper-slide" style="background-image:url(<%= thumbnail.image_url(:middle) %>)">
                <div class="swiper-slide__title">Image</div>
                <!--<button id="image1" class="swiper-slide__preview">-->
                <!--<i class="fa fa-arrows" aria-hidden="true"></i>-->
                <!--</button>-->
              </div>
          <% end %>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination" style="margin-top: 50px; margin-bottom: 50px;"></div>

        <script>
            var swiper = new Swiper('.swiper-container', {
                pagination: '.swiper-pagination',
                effect: 'coverflow',
                grabCursor: true,
                centeredSlides: true,
                slidesPerView: 'auto',
                coverflow: {
                    rotate: 50,
                    stretch: 0,
                    depth: 100,
                    modifier: 1,
                    slideShadows : true
                }
            });
        </script>
      </div>
    </div>
<% end %>